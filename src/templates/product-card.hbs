<!DOCTYPE html>
<html>
<head>
  <link href="https://fonts.googleapis.com/css2?family={{fonts.heading}}:wght@{{fonts.headingWeight}}&family={{fonts.body}}:wght@{{fonts.bodyWeight}}&display=swap" rel="stylesheet">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      width: {{width}}px;
      height: {{height}}px;
      background: transparent;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: '{{fonts.body}}', sans-serif;
    }

    .card {
      width: 540px;
      background: {{colors.surface}};
      border: 1px solid {{colors.border}};
      border-radius: {{style.borderRadius}};
      overflow: hidden;
      {{#if style.shadowIntensity}}
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
      {{/if}}
    }

    .card-header {
      padding: 32px 32px 24px;
      background: linear-gradient(
        {{style.gradientDirection}},
        {{colors.primary}}15,
        {{colors.secondary}}10
      );
      border-bottom: 1px solid {{colors.border}};
    }

    .card-badge {
      display: inline-block;
      padding: 4px 12px;
      background: {{colors.primary}}20;
      color: {{colors.primary}};
      font-size: 11px;
      font-weight: 600;
      letter-spacing: 1px;
      text-transform: uppercase;
      border-radius: 4px;
      margin-bottom: 12px;
    }

    .card-title {
      font-family: '{{fonts.heading}}', sans-serif;
      font-weight: {{fonts.headingWeight}};
      font-size: 24px;
      color: {{colors.text}};
      line-height: 1.3;
    }

    .card-body {
      padding: 24px 32px;
    }

    .card-description {
      font-size: 15px;
      color: {{colors.textMuted}};
      line-height: 1.6;
      margin-bottom: 20px;
    }

    .card-features {
      list-style: none;
    }

    .card-features li {
      padding: 6px 0;
      font-size: 14px;
      color: {{colors.text}};
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .card-features li::before {
      content: "âœ“";
      color: {{colors.accent}};
      font-weight: bold;
    }

    .card-footer {
      padding: 20px 32px;
      border-top: 1px solid {{colors.border}};
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .card-brand {
      font-family: '{{fonts.mono}}', monospace;
      font-size: 12px;
      color: {{colors.textMuted}};
      letter-spacing: 1px;
      text-transform: uppercase;
    }

    .card-cta {
      padding: 10px 24px;
      background: {{colors.primary}};
      color: white;
      font-size: 14px;
      font-weight: 600;
      border-radius: 6px;
    }
  </style>
</head>
<body>
  <div class="card">
    <div class="card-header">
      <div class="card-badge">{{product.brand}}</div>
      <h2 class="card-title">{{product.product_name}}</h2>
    </div>
    <div class="card-body">
      <p class="card-description">{{copy.og_description}}</p>
      <ul class="card-features">
        {{#each copy.gumroad_bullet_points}}
        {{#if @first}}
        <li>{{this}}</li>
        {{/if}}
        {{#if (eq @index 1)}}
        <li>{{this}}</li>
        {{/if}}
        {{#if (eq @index 2)}}
        <li>{{this}}</li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="card-footer">
      <span class="card-brand">{{product.brand}}</span>
      <span class="card-cta">{{copy.call_to_action}}</span>
    </div>
  </div>
</body>
</html>
